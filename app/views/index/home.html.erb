<% content_for :js do %>
	<script type="text/javascript" src="/static/js/home.js"></script>
<% end %>

<div class="row">
	<div class="span4">
		<h2>User Stuff</h2>
		<ul class="nav nav-list">
			<li class="nav-header">
				This Section Right Here
			</li>
			<li>
				<textarea>will have box where the user can compose a new event</textarea>
			</li>
			<li class="nav-header">
				User
			</li>
			<li>
				<strong>ID</strong> // <%= session[:user_id] %>
			</li>
			<li>
				<strong>Name</strong> // <%= session[:screen_name] %>
			</li>
		</ul>
	</div>
	<div class="span8">
		<div id="mobs">
			<% @mobs.each do |mob| %>
				<div class="mob" id="<%= mob["id"] %>">
					<div class="map" data-latitude="<%= mob["where"]["latitude"] %>" data-longitude="<%= mob["where"]["longitude"] %>" data-focused="false"></div>
					<p>
						<h3><%= mob["tweet"].gsub(/\s*@erlymob_?\S*\s*/i, "") %></h3>
						<h4><a class="text" href="https://twitter.com/#!/search/%23<%= mob["hashtag"] %>" target="_blank">#<%= mob["hashtag"] %></a></h4>
						<h6>Posted by <a class="text" href="http://twitter.com/<%= mob["user"] %>" target="_blank">@<%= mob["user"] %></a> on <%= Time.at(mob["created"]).to_datetime.strftime("%d %b - %I:%M%p") %></h6>
						<div class="options" >
							<a href="#" class="like">0</a>
							<a href="#" class="rsvp">0</a>
						</div>
					</p>
				</div>
			<% end %>
		</div>
	</div>
</div>
